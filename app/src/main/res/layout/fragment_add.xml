<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.AddFragment">
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">
        <EditText android:layout_width="236dp"
                  android:layout_height="wrap_content"
                  android:hint="@string/enter_product_name"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp" android:id="@+id/addProductNameid" android:layout_marginTop="100dp"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.502"/>
        <EditText android:layout_width="236dp"
                  android:layout_height="wrap_content"
                  android:hint="@string/enter_product_price"
                  android:layout_marginTop="48dp"
                  app:layout_constraintTop_toBottomOf="@+id/addProductNameid" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp" android:id="@+id/addProductPriceId"
                  app:layout_constraintHorizontal_bias="0.502"/>

        <Button android:layout_width="130dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/addProductPriceId"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.206"
                android:id="@+id/btnAddProductId" android:text="Add"/>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>