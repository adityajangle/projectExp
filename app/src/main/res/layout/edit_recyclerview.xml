<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="@string/product_name"
            android:layout_width="100dp"
            android:layout_height="32dp" android:id="@+id/txtprodnameicon"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="267dp"
            android:layout_height="32dp" android:id="@+id/txtprodnameid"
            app:layout_constraintStart_toEndOf="@+id/txtprodnameicon" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txtprodpriceid"/>
    <TextView
            android:text="@string/product_price"
            android:layout_width="100dp"
            android:layout_height="32dp" android:id="@+id/txtprodpriceiconid"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtprodnameicon"/>
    <TextView
            android:layout_width="267dp"
            android:layout_height="32dp" android:id="@+id/txtprodpriceid"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtprodpriceiconid"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/txtprodpriceiconid" android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>